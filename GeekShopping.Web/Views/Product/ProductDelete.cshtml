@model GeekShopping.Web.Models.ProductModel;


<form asp-action="ProductDelete">
    <input asp-for="id" type="hidden"disabled/>
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Product?</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="nome" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="nome" class="form-control" disabled/>
                
            </div>

            <div class="col-2">
                <label asp-for="nome_categoria" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="nome_categoria" class="form-control" disabled/>
                
            </div>

            <div class="col-2">
                <label asp-for="descricao" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="descricao" disabled class="form-control" rows="3"></textarea>
                
            </div>

            <div class="col-2">
                <label asp-for="preco" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="preco" class="form-control" disabled/>
                
            </div>

            <div class="col-2">
                <label asp-for="url_imagem" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="url_imagem" class="form-control" disabled/>
                
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn-primary btn form-control">Back to list</a>
            </div>

            <div class="col-5">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>

        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}